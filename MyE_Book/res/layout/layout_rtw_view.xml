<?xml version="1.0" encoding="utf-8"?> 
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp" >

        <Button
            android:id="@+id/btn_detail"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="详细"/>

        <ImageView
            android:id="@+id/img_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="18dp"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/txt_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/img_show"
            android:text="showtext"
            android:textSize="20dp" />

    </RelativeLayout>

    <HorizontalScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        
        >

        <LinearLayout
            android:id="@+id/scroll_ly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
       

        <LinearLayout
            android:id="@+id/book_cell_1"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:background="#888888"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
           android:orientation="vertical" >

            <ImageView
                android:id="@+id/book_img_1"
                android:layout_width="135dp"
                android:layout_height="150dp"
                android:src="@drawable/defualt" />

            <TextView
                android:id="@+id/book_txt_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="第一本书的名字" />

         </LinearLayout>
     </LinearLayout>

    </HorizontalScrollView>

</LinearLayout>