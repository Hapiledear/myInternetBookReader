<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3157F0"
    android:orientation="vertical" >

    <!-- logo -->

    <RelativeLayout
        android:id="@+id/ly_logo"
        android:layout_width="match_parent"
        android:layout_height="94dp"
        android:layout_weight="0.88"
        android:gravity="top" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="XX小说"
            android:textColor="#ffffff"
            android:textSize="40dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ly_account"
        android:layout_width="match_parent"
        android:layout_height="156dp"
        android:layout_weight="1.24" 
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp">

        <EditText
            android:id="@+id/edt_mima"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignLeft="@+id/edt_zhanghao"
            android:layout_alignRight="@+id/edt_zhanghao"
            android:layout_below="@+id/edt_zhanghao"
            android:background="@drawable/state_edittext"
            android:ems="10"
            android:hint="  密码"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/btn_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/edt_mima"
            android:layout_alignRight="@+id/edt_mima"
            android:layout_below="@+id/edt_mima"
            android:layout_marginTop="17dp"
            android:textColor="#ffffff"
            android:background="@drawable/state_btn_login"
            android:text="登陆" />

        <EditText
            android:id="@+id/edt_zhanghao"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/state_edittext"
            android:ems="10"
            android:hint="  账号" >

            <requestFocus />
        </EditText>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="154dp" >

        <Button
            android:id="@+id/btn_sign_up"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="14dp"
            android:background="@drawable/state_btn_sign_up"
            android:text="注册一个"
            android:textColor="#ffffff" />

    </RelativeLayout>

</LinearLayout>